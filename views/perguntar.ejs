<%- include('./partials/header.ejs'); %>

<body>
    <%- include('./partials/navbar.ejs'); %>

    <div class="container">
        <div class="card" id="formulario-perguntas">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <!-- Métodos em formularios
                    POST:os dados são passados dentro da requisição
                    GET:os dados serão enviados utilizando Query params(Na URL)
                -->
                <form method="POST" action="/salvarpergunta">
                    <label>Título</label>
                    <input type="text" placeholder="Título" class="form-control" name="titulo">
                    <br><label>Descrição</label>
                    <textarea placeholder="Descreva sua pergunta aqui" class="form-control" name="descricao"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
</body>

